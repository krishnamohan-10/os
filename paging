#include <stdio.h>
int main() 
{
int mem_size, page_size;
printf("Enter total memory size: ");
scanf("%d", &mem_size);
printf("Enter page size: ");
scanf("%d", &page_size);
int no_pages = mem_size / page_size;
printf("Total pages = %d\n", no_pages);
int page_table[no_pages];
printf("Enter frame number for each page:\n");
for(int i=0;i<no_pages;i++){
printf("Page %d -> ", i);
scanf("%d", &page_table[i]);
}
int logic_addr;
printf("Enter logical address: ");
scanf("%d", &logic_addr);
int page_no = logic_addr / page_size;
int offset = logic_addr % page_size;
int phy_addr = page_table[page_no] * page_size + offset;
printf("Physical address = %d\n", phy_addr);
return 0;
}
