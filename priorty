#include <stdio.h>
int main() {
int n;
printf("Enter number of processes: ");
scanf("%d", &n);
int bt[n], p[n], pid[n];
for(int i=0;i<n;i++){
pid[i] = i+1;
printf("Enter burst time & priority for P%d: ", i+1);
scanf("%d %d", &bt[i], &p[i]);
}
for(int i=0;i<n;i++){
for(int j=i+1;j<n;j++){
if(p[j] < p[i]) {
int t=p[j]; p[j]=p[i]; p[i]=t;
t=bt[j]; bt[j]=bt[i]; bt[i]=t;
t=pid[j]; pid[j]=pid[i]; pid[i]=t;
}
}
}
int wt[n], tat[n];
wt[0] = 0;
for(int i=1;i<n;i++)
wt[i] = wt[i-1] + bt[i-1];
for(int i=0;i<n;i++)
tat[i] = wt[i] + bt[i];
printf("\nP\tBT\tPR\tWT\tTAT\n");
for(int i=0;i<n;i++)
printf("P%d\t%d\t%d\t%d\t%d\n", pid[i], bt[i], p[i], wt[i], tat[i]);
return 0;
}
